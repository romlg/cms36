function download (type,param){
	if(type=='mas'){
		the_id=param[0];
		if (param.length > 0) param.shift();
		if(param.length>=1){
			new Ajax.Updater('temp', 'modules/cd/core/wget.php', {asynchronous:true, evalScripts:true, method:'post', parameters:'type=id&id='+the_id, onComplete:function(request){ if(request.responseText!='END') {$("cb_"+the_id).className="done"; i++; progress_bar(1); download('mas',param); } else {alert('Создание презентации было приостановлено'); window.location.reload();}}});
		}
	}
	if(type=='css'){
		new Ajax.Updater('temp', 'modules/cd/core/wget.php', {asynchronous:true, evalScripts:true, method:'post', parameters:'type=css', onComplete:function(request){ if(request.responseText!='END') {i++; progress_bar(1); } else {alert('Создание презентации было приостановлено'); window.location.reload();}}}); 
	}
	if(type=='menu.js'){
		new Ajax.Updater('temp', 'modules/cd/core/wget.php', {asynchronous:true, evalScripts:true, method:'post', parameters:'type=menu.js', onComplete:function(request){ if(request.responseText!='END') {i++; progress_bar(1); } else {alert('Создание презентации было приостановлено'); window.location.reload();}}}); 
	}
}

function end_cd_pres(){
	new Ajax.Request('modules/cd/core/wget.php', {asynchronous:true, method:'post',parameters:'type=all_rest', onComplete:function(req){
	 if(req.responseText=='OK')
		{
			make_zip();
		}else if (req.responseText!='END'){
			$('log').innerHTML+='<div class="done">' + req.responseText + '</div>';
			end_cd_pres();
			i++;
			progress_bar(0);
		}
		else {alert('Создание презентации было приостановлено'); window.location.reload();}
	 }});
}

function make_zip(){
		new Ajax.Updater('xlam', 'modules/cd/core/zip.php', {asynchronous:true, evalScripts:true, method:'post', parameters:'action=arch', onComplete:function(request){ $('indicator').innerHTML='<table border=1 width=300><tr><td align=center>Готово</td></tr></table>'; alert('Создание презентации завершено'); window.location.reload(); }});	
}

function progress_bar(end){
	$('indicator').innerHTML = '<table border=1 width=300><tr><td align=center>' + (i-1) + ' ' + GetEndingWord(i-1, "страница", "страницы", "страниц") + '</td></tr></table>';
	if (end) if (i == {/literal}{$itemz_count}{literal}+1) end_cd_pres();
}
function GetEndingWord(num, t1, t2, t5) {
	num = num % 100;
	if (num>20 || num<5) switch (num%10) {
		case 1: return t1;
		case 2: case 3: case 4: return t2;
	}
	return t5;
}
